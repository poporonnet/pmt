{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build", "dist"]
}
